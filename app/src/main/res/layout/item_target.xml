<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/def_half_margin"
        android:layout_marginTop="@dimen/def_margin"
        android:layout_marginEnd="@dimen/def_half_margin"
        android:layout_marginBottom="@dimen/def_margin"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/def_half_margin">

            <TextView
                android:id="@+id/item_target__name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/def_margin"
                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/big_title_text_size"
                android:textStyle="bold"
                tools:text="@string/target_sample" />

            <TextView
                android:id="@+id/item_target__result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/item_target__name"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/def_margin"
                android:fontFamily="@font/gothic"
                android:text="@string/will_done"
                android:textColor="@color/green"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/item_target__date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/item_target__name"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/def_margin"

                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:text="@string/date_sample"
                android:textSize="@dimen/title_text_size" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>