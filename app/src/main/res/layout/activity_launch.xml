<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ViewSwitcher
        android:id="@+id/activity_main__view_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_margin"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_half_margin"

        android:text="@string/target_sample"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/big_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/activity_main__container"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_main__target_name_edit_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/def_margin"

                android:focusableInTouchMode="true"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_main__fab_ok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_main__target_name_edit_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/my_target"
                    android:inputType="textShortMessage"
                    android:textColor="@color/black"
                    android:textSize="@dimen/big_title_text_size" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_main__fab_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/def_margin"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_ok" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/activity_main__target_name_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="@dimen/def_margin"
            android:gravity="center_vertical"
            android:text="@string/target_sample"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/big_title_text_size"
            android:textStyle="bold" />
    </ViewSwitcher>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main__container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toTopOf="@id/activity_main__container2"
        app:layout_constraintTop_toBottomOf="@id/activity_main__view_switcher">

        <fragment
            android:id="@+id/activity_name__question1"
            android:name="com.develop.loginov.mytarget.controller.fragment.QuestionFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            android:layout_marginEnd="@dimen/def_half_margin"
            android:layout_marginBottom="@dimen/def_half_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_name__question2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:name="@string/question1" />

        <fragment
            android:id="@+id/activity_name__question2"
            android:name="com.develop.loginov.mytarget.controller.fragment.QuestionFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/def_half_margin"
            android:layout_marginTop="@dimen/def_margin"
            android:layout_marginEnd="@dimen/def_margin"
            android:layout_marginBottom="@dimen/def_half_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_name__question1"
            app:layout_constraintTop_toTopOf="parent"

            app:name="@string/question2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main__container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toTopOf="@id/activity_main__attention"
        app:layout_constraintTop_toBottomOf="@id/activity_main__container">

        <fragment
            android:id="@+id/activity_name__question3"
            android:name="com.develop.loginov.mytarget.controller.fragment.QuestionFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_half_margin"
            android:layout_marginEnd="@dimen/def_half_margin"
            android:layout_marginBottom="@dimen/def_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_name__question4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:name="@string/question3" />

        <fragment
            android:id="@+id/activity_name__question4"
            android:name="com.develop.loginov.mytarget.controller.fragment.QuestionFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/def_half_margin"
            android:layout_marginTop="@dimen/def_half_margin"
            android:layout_marginEnd="@dimen/def_margin"
            android:layout_marginBottom="@dimen/def_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_name__question3"
            app:layout_constraintTop_toTopOf="parent"

            app:name="@string/question4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_main__attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_half_margin"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_half_margin"

        android:gravity="center"
        android:text="@string/attention_answer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"

        app:layout_constraintBottom_toTopOf="@id/activity_main__button_next"
        app:layout_constraintTop_toBottomOf="@id/activity_main__container2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_main__button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/button_horizon_margin"
        android:layout_marginTop="@dimen/def_half_margin"
        android:layout_marginEnd="@dimen/button_horizon_margin"
        android:layout_marginBottom="100dp"

        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__attention" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_main__toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/activity_launch__fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:tint="@android:color/white"
            app:layout_anchor="@id/bottom_app_bar"
            app:srcCompat="@android:drawable/ic_input_add" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/colorPrimary"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="5dp"
            app:navigationIcon="@drawable/menu_white_24x24"

            />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
