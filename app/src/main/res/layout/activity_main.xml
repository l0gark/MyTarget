<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_main__target_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_margin"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_half_margin"

        android:text="@string/target_sample"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/big_title_text_size"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/activity_main__container"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main__container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="@id/activity_main__attention"
        app:layout_constraintTop_toBottomOf="@id/activity_main__target_name">

        <fragment
            android:id="@+id/activity_name__question1"
            android:name="com.develop.loginov.mytarget.controller.fragment.SimpleQuestionFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            android:layout_marginEnd="@dimen/def_half_margin"
            android:layout_marginBottom="@dimen/def_half_margin"

            app:layout_constraintBottom_toTopOf="@id/activity_name__question3"
            app:layout_constraintEnd_toStartOf="@id/activity_name__question2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:name="@string/question1" />

        <fragment
            android:id="@+id/activity_name__question2"
            android:name="com.develop.loginov.mytarget.controller.fragment.SimpleQuestionFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginStart="@dimen/def_half_margin"
            android:layout_marginTop="@dimen/def_margin"
            android:layout_marginEnd="@dimen/def_margin"
            android:layout_marginBottom="@dimen/def_half_margin"

            app:layout_constraintBottom_toTopOf="@id/activity_name__question4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_name__question1"
            app:layout_constraintTop_toTopOf="parent"

            app:name="@string/question2" />

        <fragment
            android:id="@+id/activity_name__question3"
            android:name="com.develop.loginov.mytarget.controller.fragment.SimpleQuestionFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_half_margin"
            android:layout_marginEnd="@dimen/def_half_margin"
            android:layout_marginBottom="@dimen/def_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_name__question4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_name__question1"

            app:name="@string/question3" />

        <fragment
            android:id="@+id/activity_name__question4"
            android:name="com.develop.loginov.mytarget.controller.fragment.SimpleQuestionFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginStart="@dimen/def_half_margin"
            android:layout_marginTop="@dimen/def_half_margin"
            android:layout_marginEnd="@dimen/def_margin"
            android:layout_marginBottom="@dimen/def_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_name__question3"
            app:layout_constraintTop_toBottomOf="@id/activity_name__question2"

            app:name="@string/question4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_main__attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_half_margin"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_half_margin"

        android:text="@string/attention_answer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"

        app:layout_constraintBottom_toTopOf="@id/activity_main__button_next"
        app:layout_constraintTop_toBottomOf="@id/activity_main__container" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_main__button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_half_margin"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_margin"

        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__attention" />

</androidx.constraintlayout.widget.ConstraintLayout>